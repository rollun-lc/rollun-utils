{
  "name": "rollun-com/rollun-utils",
  "description": "Utils rollun library",
  "type": "library",
  "license": "GPL-3.0",
  "keywords": [
    "php",
    "rest",
    "data store",
    "middleware"
  ],
  "authors": [
    {
      "name": "avz-cmf",
      "email": "email@example.com"
    },
    {
      "name": "victorynox",
      "email": "it.proffesor02@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "nicolab/php-ftp-client": "^1.6",
    "laminas/laminas-db": "^2.13",
    "laminas/laminas-http": "^2.15",
    "rollun-com/rollun-installer": "dev-laminas",
    "mindplay/jsonfreeze": "dev-master",
    "opis/closure": "4.x-dev",
    "facebook/webdriver": "^1.1",
    "laminas/laminas-cache": "^3.1.2",
    "laminas/laminas-mail": "2.16.x-dev",
    "ext-json": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "openmetrics-php/exposition-text": "dev-master",
    "psr/http-server-middleware": "1.0.x-dev",
    "laminas/laminas-cache-storage-adapter-filesystem": "2.1.x-dev"
  },
  "autoload": {
    "psr-4": {
      "rollun\\logger\\": "src/Logger/src",
      "rollun\\Callables\\": "src/Callables/src",
      "rollun\\Marketplace\\": "src/Marketplace/src",
      "rollun\\tableGateway\\": "src/TableGateway/src",
      "rollun\\utils\\": "src/Utils/src",
      "rollun\\utils\\HtmlParser\\": "src/HtmlParser/src",
      "rollun\\utils\\Cleaner\\": "src/Cleaner/src",
      "rollun\\utils\\FailedProcesses\\": "src/FailedProcesses/src",
      "rollun\\utils\\Metrics\\": "src/Metrics/src",
      "rollun\\utils\\WebDriver\\": "src/WebDriver/src",
      "rollun\\tracer\\": "src/Tracer/src",
      "rollun\\Downloader\\": "src/Downloader/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "rollun\\test\\utils\\": "tests/src"
    }
  },
  "extra": {
    "zf": {
      "config-provider": [
        "rollun\\utils\\FailedProcesses\\ConfigProvider",
        "rollun\\utils\\Metrics\\ConfigProvider"
      ]
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@development-enable"
    ],
    "development-disable": "zf-development-mode disable",
    "development-enable": "zf-development-mode enable",
    "development-status": "zf-development-mode status",
    "check": [
      "@cs-check",
      "@test"
    ],
    "clear-config-cache": "php bin/clear-config-cache.php",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "coveralls -v"
  },
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "path",
      "url": "/home/yurii/www/rollun/rollun-installer"
    },
    {
      "type": "path",
      "url": "/home/yurii/www/rollun/rollun-dic"
    }
  ],
  "config": {
    "allow-plugins": {
      "rollun-com/rollun-installer": true
    }
  },
  "replace": {

  }
}
